<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gregorybahr.chip8emulator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Chip8RomSelectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Chip8EmulatorActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".NesEmulatorActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".EmulatorSelectionActivity"></activity>
    </application>

</manifest>